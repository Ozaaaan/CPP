CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98

NAME = zombie
SRC =   main.cpp \
	Zombie.cpp \
	zombieHorde.cpp

OBJS = $(SRC:.cpp=.o)
RM = rm -f

all : ${NAME}

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re

.SILENT:
